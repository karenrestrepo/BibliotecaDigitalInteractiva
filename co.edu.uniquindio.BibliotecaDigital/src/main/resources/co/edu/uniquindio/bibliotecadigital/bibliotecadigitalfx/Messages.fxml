<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane prefHeight="675.0" prefWidth="603.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bibliotecadigital.bibliotecadigitalfx.Controller.MessagesController">
   <children>
      <BorderPane layoutX="7.0" layoutY="7.0" prefHeight="662.0" prefWidth="589.0">
         <top>
            <ComboBox fx:id="cbFriends" onAction="#onChat" prefWidth="150.0" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <ListView fx:id="lvMessages" prefHeight="561.0" prefWidth="589.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox prefHeight="58.0" prefWidth="589.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtMessages" prefHeight="25.0" prefWidth="504.0" />
                  <Button fx:id="btnSend" mnemonicParsing="false" onAction="#onSend" prefHeight="25.0" prefWidth="89.0" text="Enviar" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
